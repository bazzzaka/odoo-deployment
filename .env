# Odoo Deployment Configuration

# Domain settings
DOMAIN=localhost

# PostgreSQL settings
POSTGRES_USER=odoo
POSTGRES_PASSWORD=odoo_db_password
POSTGRES_DB=odoo

# Odoo settings
ADMIN_PASSWORD=admin_password

# Backup settings
BACKUP_RETENTION_DAYS=30

# Container settings
ODOO_VERSION=18.0


